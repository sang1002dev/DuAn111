<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/img_1"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/gray2"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            >

            <ImageView
                android:id="@+id/btnBackThemSP"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_to_back"
                android:layout_marginLeft="15dp"
                />

            <TextView
                style="@style/edt_Label"
                android:layout_width="match_parent"
                android:textColor="@color/purple_200"
                android:textAlignment="center"
                android:text="Thêm Sản Phẩm"
                android:textSize="30dp"
                android:fontFamily="@font/ct_font_bold"
                android:layout_marginRight="30dp"

                />

        </LinearLayout>

        <ImageView
            android:id="@+id/add_image"
            android:layout_width="131dp"
            android:layout_height="135dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/img_add_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    style="@style/edt_Label"
                    android:text="Tên Sản Phẩm"
                    android:textColor="@color/red1"
                    android:layout_marginLeft="10dp"
                    />

                <EditText
                    android:id="@+id/edNameSP"
                    style="@style/edt_TextBox2"
                    android:hint="Nhập tên Sản Phẩm"
                    android:layout_marginTop="5dp"
                    android:textColorHint="@color/black"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    style="@style/edt_Label"
                    android:text="Giá Bán"
                    android:textColor="@color/red1"
                    android:layout_marginLeft="10dp"
                    />

                <EditText
                    android:id="@+id/edPrice"
                    style="@style/edt_TextBox2"
                    android:hint="Nhập giá bán"
                    android:maxLength="7"
                    android:inputType="number"
                    android:layout_marginTop="5dp"
                    android:textColorHint="@color/black"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    style="@style/edt_Label"
                    android:text="Loại sản phẩm"
                    android:textColor="@color/red1"
                    android:layout_marginLeft="10dp"
                    />

                <AutoCompleteTextView
                    android:id="@+id/edtLoaiSP"
                    style="@style/edt_TextBox2"
                    android:hint="Nhập loại Sản Phẩm"
                    android:layout_marginTop="5dp"
                    android:textColorHint="@color/black"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    style="@style/edt_Label"
                    android:text="Mô Tả"
                    android:textColor="@color/red1"
                    android:layout_marginLeft="10dp"
                    />

                <EditText
                    android:id="@+id/edMoTa"
                    style="@style/edt_TextBox2"
                    android:hint="Nhập mô tả sản phẩm"
                    android:layout_marginTop="5dp"
                    android:textColorHint="@color/black"
                    android:lines="2"
                    android:maxLines="2"
                    android:minLines="2"
                    android:gravity="top"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            >
<!--//cuong them id-->

            <EditText
                android:id="@+id/btnHuySp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:background="@drawable/bo_tron_edt"
                android:backgroundTint="@color/purple_200"
                android:editable="false"
                android:focusable="false"
                android:fontFamily="@font/ct_font_medium"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingTop="7dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="Hủy"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/btnAcceptSP"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bo_tron_edt"
                android:backgroundTint="@color/purple_200"
                android:text="Xác Nhận"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:fontFamily="@font/ct_font_medium"
                android:textStyle="bold"
                android:paddingTop="7dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:editable="false"
                android:focusable="false"
                />
        </LinearLayout>

    </LinearLayout>



</ScrollView>