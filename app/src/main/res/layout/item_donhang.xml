<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginBottom="10dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#94A93FB5"
        android:gravity="center_vertical"
        >


        <TextView
            android:id="@+id/txtHoaDonTitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hóa đơn đặt hàng"
            android:fontFamily="@font/ct_font_medium"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Khách hàng:"
                android:textColor="@color/white"
                android:fontFamily="@font/ct_font_medium"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txtHDTenKH1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nguyen Dat"
                android:fontFamily="@font/ct_font_bold"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Ngày bán:"
                android:fontFamily="@font/ct_font_medium"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txtHDNgayBan1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="22/11/2003"
                android:fontFamily="@font/ct_font_bold"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="SDT :"
                android:fontFamily="@font/ct_font_medium"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txtHDSDT1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0968786843"
                android:fontFamily="@font/ct_font_bold"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Địa chỉ:"
                android:fontFamily="@font/ct_font_medium"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txtHDDiaChi1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="121 Mỹ Đình, HN"
                android:fontFamily="@font/ct_font_bold"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Tên Sản Phẩm"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/ct_font_medium"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Đ.Giá"
                android:fontFamily="@font/ct_font_medium"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="S.lg"
                android:fontFamily="@font/ct_font_bold"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_donHang"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:weightSum="2"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng tiền:"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:fontFamily="@font/ct_font_medium"
                    />




            </LinearLayout>

            <TextView
                android:id="@+id/txtHDTongTien1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="000.000đ"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:fontFamily="@font/ct_font_bold"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Trạng thái:"
                android:textColor="@color/white"
                android:fontFamily="@font/ct_font_medium"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txtHDTrangThai1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ct_font_bold"
                android:text="Đang chờ xử lý"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            >

            <Button
                android:id="@+id/btnHoaDonXN1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/purple_500"
                android:text="Xác Nhận"
                android:gravity="center"
                android:textSize="16dp"
               android:textColor="@color/card"
                android:fontFamily="@font/ct_font_medium"
                android:textStyle="bold"
                android:paddingTop="7dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:editable="false"
                android:focusable="false"
                android:visibility="gone"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>