<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_1"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/floatAddToCard"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:orientation="horizontal"
                android:layout_marginBottom="100dp"
                android:weightSum="2"
                >

                <ImageView
                    android:id="@+id/imgCTSanPham"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/img_3" />

                <ImageView
                    android:id="@+id/imgCTSanPham1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/img_3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtChiTietTenSp"
                    style="@style/edt_Label"
                    android:text="Something Tên SP"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtChiTietGiaSP"
                    style="@style/edt_Label"
                    android:layout_marginLeft="20dp"
                    android:text="29.000đ"
                    android:textColor="@color/red"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/edt_Label"
                    android:text="Mô tả sản phẩm"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtChiTietMoTaSP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/ct_font_medium"
                    android:text="Điện thoại Iphone 14 thế hệ mới"
                    android:textColor="@color/black"
                    android:textSize="15dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        style="@style/edt_Label"
                        android:text="Số lượng"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:paddingRight="20dp"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            >

                            <ImageView
                                android:id="@+id/btnSoLuongGiam"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_remove_2"
                                />

                            <TextView
                                android:id="@+id/txtChiTietSL"
                                style="@style/edt_Label"
                                android:layout_width="40dp"
                                android:textAlignment="center"
                                android:text="88"
                                android:textColor="@color/red"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/btnSoLuongTang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_add_circle"
                                />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <TextView
                    style="@style/edt_Label"
                    android:text="Ghi Chú"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtChiTietGhiChu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bo_tron_edt"
                    android:fontFamily="@font/ct_font_medium"
                    android:gravity="top"
                    android:hint="Yêu cầu của khách hàng"
                    android:inputType="text|textMultiLine"
                    android:lines="2"
                    android:maxLines="2"
                    android:minLines="2"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/floatAddToCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="3dp"
            >

            <TextView
                style="@style/edt_Label"
                android:text="Tổng tiền"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/txtChiTietTongTien"
                style="@style/edt_Label"
                android:layout_width="match_parent"
                android:textAlignment="textEnd"
                android:paddingRight="20dp"
                android:text="Tổng tiền"
                android:textColor="@color/red"
                android:textSize="25dp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >

            <EditText
                android:id="@+id/btnChiTietAddToCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bo_tron_edt"
                android:backgroundTint="@color/purple_200"
                android:text="Thêm vào giỏ"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:fontFamily="@font/ct_font_medium"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:editable="false"
                android:focusable="false"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>