<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/img_1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/card"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            >

            <ImageView
                android:id="@+id/btnBackThemNV"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_to_back"
                android:layout_marginLeft="15dp"
                />

            <TextView
                style="@style/edt_Label"
                android:layout_width="match_parent"
                android:textColor="@color/purple_200"
                android:textAlignment="center"
                android:text="Thêm người dùng"
                android:textSize="25dp"
                android:fontFamily="@font/ct_font_bold"
                android:layout_marginRight="30dp"

                />

        </LinearLayout>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/sang"
            android:layout_marginTop="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    style="@style/edt_Label"
                    android:text="Họ và tên"
                    android:textColor="@color/purple_200"
                    android:layout_marginLeft="10dp"
                    />

                <EditText
                    android:id="@+id/edTenNhanVien"
                    style="@style/edt_TextBox2"
                    android:layout_marginTop="5dp"

                   />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    style="@style/edt_Label"
                    android:text="Tên đăng nhập"
                    android:textColor="@color/purple_200"
                    android:layout_marginLeft="10dp"
                    />

                <EditText
                    android:id="@+id/edUsername"
                    style="@style/edt_TextBox2"
                    android:layout_marginTop="5dp"

                 />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    style="@style/edt_Label"
                    android:layout_marginLeft="10dp"
                    android:text="Mật khẩu"
                    android:textColor="@color/purple_200" />

                <EditText
                    android:id="@+id/edPassword"
                    style="@style/edt_TextBox2"

                    android:inputType="textPassword"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    style="@style/edt_Label"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Số điện thoại"
                    android:textColor="@color/purple_200" />

                <EditText
                    android:id="@+id/edSDT"
                    android:maxLength="10"
                    style="@style/edt_TextBox2"

                    android:inputType="number"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    style="@style/edt_Label"
                    android:layout_marginLeft="10dp"
                    android:text="Năm sinh"
                    android:textColor="@color/purple_200" />

                <EditText
                    android:id="@+id/edNamSinh"
                    style="@style/edt_TextBox2"
                    android:maxLength="4"

                    android:inputType="number"
                    android:layout_marginTop="5dp"
                   android:layout_marginBottom="30dp"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            >

            <EditText
                android:id="@+id/btnHuyThemNV"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bo_tron_edt"
                android:backgroundTint="#65D386FC"
                android:text="Hủy"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:fontFamily="@font/ct_font_medium"
                android:textStyle="bold"
                android:paddingTop="7dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:editable="false"
                android:focusable="false"
                android:layout_marginRight="15dp"
                />

            <EditText
                android:id="@+id/btnAddThemNV"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bo_tron_edt"
                android:backgroundTint="#65D386FC"
                android:text="Xác Nhận"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:fontFamily="@font/ct_font_medium"
                android:textStyle="bold"
                android:paddingTop="7dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:editable="false"
                android:focusable="false"
                />
        </LinearLayout>

    </LinearLayout>



</ScrollView>